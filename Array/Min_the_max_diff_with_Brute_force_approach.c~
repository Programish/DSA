#include<stdio.h>
#include<math.h>

void sort(int* a,int n){
	int temp;
	for(int i = 0;i < n;i++)
		for(int j = i + 1;j < n;j++)
			if(a[i] > a[j]){
				temp = a[i];
				a[i] = a[j];
				a[j] = temp;
			}
}

int main(void){
	int l,k;
	printf("Enter no. of elements and factor k separated by a space:\n");
	scanf("%d %d",&l,&k);
	int a[l];
	printf("Enter elements in array:\n");
	for(int i = 0;i < l;i++)
		scanf("%d",&a[i]);
	int diff = 99999;
	int digit = 0,flag = 0;
	for(int i = 0;i < pow(2,l);i++){
		digit = 0;
		int copy[l];
		for(int i = 0;i < l;i++)
			copy[i] = a[i];
		while(digit < l){
			if((i >> digit) & 0b1){
				printf("if in array %d   digit %d\n",i + 1,digit + 1);
				copy[digit] -= k;
				printf("Array%d digit%d   is %d\n",i + 1,digit + 1,copy[digit]);
			}
			else{
				printf("else in array %d   digit %d\n",i+1,digit+1);
				copy[digit] += k;
				printf("Array%d digit%d   is %d\n",i+1,digit + 1,copy[digit]);
			}
			digit++;
		}
		sort(copy,l);
		if(copy[0] >= 0)
			flag = 1;
                if(flag > 0)
              	 	if((copy[l - 1] - copy[0]) < diff)
               			diff = copy[l - 1] - copy[0];
		flag = 0;

		printf("Diff of array%d is %d \n\n\n",i+1,diff);
	}
	printf("Minimized = %d\n\n",diff);
	return 0;
}
